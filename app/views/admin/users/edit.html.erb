<h2>User Edit</h2>

<div class="container">
  <%= @user.name %>さんの編集画面
  <%= form_with model: @user, url:  admin_user_path(@user.id) do |f| %>
  <div class="form-group row  justify-content-center">
    <div class="col-sm-2"><%= f.label :name, class: 'col-form-label' %></div>
    <div class="col-sm-5"><%= f.text_field :name, class: 'form-control' %></div>
  </div>
  <div class="form-group row  justify-content-center">
    <div class="col-sm-2"><%= f.label :profile, class: 'col-form-label' %></div>
    <div class="col-sm-5"><%= f.text_area :profile, class: 'form-control' %></div>
  </div>
  <div class="form-group row  justify-content-center">
    <div class="col-sm-2"><%= f.label :Userステータス %></div>
    <div class="col-sm-5">
      <%= f.radio_button :is_deleted, false, {:checked => true} %>有効
      <%= f.radio_button :is_deleted, true %>無効
    </div>
  </div>
    <div><%= f.submit "変更を保存" %></div>
    <% end %>
  </div>
</div>
