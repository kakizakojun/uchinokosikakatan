<h2>User Show</h2>

<div class="container">
  <div class="row">
    <%= @user.name %>さんの詳細
    <table class="table">
      <tbody>
        <tr>
          <td>name</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>email</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>profile</td>
          <td><%= @user.profile %></td>
        </tr>
        <tr>
          <td>プライバシーステータス</td>
          <td>
            <% if @user.is_active? %>
              公開
            <% else %>
              非公開
            <% end %>
          </td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td>
            <% if @user.is_deleted? %>
              無効
            <% else %>
              有効
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>


<%= link_to "User一覧", admin_users_path, class: 'btn btn-primary' %>
<%= link_to "編集する", edit_admin_user_path, class: 'btn btn-primary' %>