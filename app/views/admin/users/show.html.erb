<h2>User Show</h2>


<div class="container">
  <%= @user.name %>さんの詳細
  <div class="row">
    <div class="col-md-4">
      <h2>user info</h2>
      <table class='table'>
        <tr><%= image_tag @user.get_profile_image, size: '100x100' %></tr>
        <tr>
      	  <th>name</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>profile</th>
      	  <th><%= @user.profile %></th>
        </tr>
        <tr>
          <th>プライバシーステータス</th>
          <th>
            <% if @user.is_active? %>
              公開
            <% else %>
              非公開
            <% end %>
          </th>
        </tr>
        <tr>
          <th>ステータス</th>
          <th>
            <% if @user.is_deleted? %>
              無効
            <% else %>
              有効
            <% end %>
          </th>
        </tr>
      </table>
      <%= link_to edit_admin_user_path, class: "btn btn-outline-secondary btn-block " do %>
        <i class="fas fa-user-cog"></i>
      <% end %>

      <%= link_to admin_user_path, class: "btn btn-outline-primary btn-block" do %>
        <i>User一覧</i>
      <% end %>

    </div>
    <div class="col-md-7">
      <% @posts.each do |post| %>
        <% post.medias.each do |media| %>
          <%= link_to post_path(post.id) do %>
          <%= image_tag media, size: '140x100' %>
        <% end %>
        <% end %>
          <%= post.caption %>
        <% end %>
    </div>
  </div>
</div>


