<div class="container">
  <div class="row pt-5">
    <h2>投稿一覧</h2>
  </div>
  <div class="row">
  <% @posts.each do |post| %>
  <div class="card-group pt-2 pl-2">
    <div class="card">
    <div class="card-img">
      <%= link_to admin_post_path(post.id) do %>
        <%= image_tag post.medias[0], size: '140x100' %>
      <% end %>
    </div>
    <div class="card-body">
      <%= link_to admin_user_path(post.user.id) do %>
        <%= image_tag post.user.get_profile_image, size: '30x30' %>
        <%= post.user.name %>
      <% end %>
    </div>
    </div>
    </div>
    <% end %>
  </div>
</div>
