<div class="container">
  <div class="row">
    <% if another_enties.exists? %>
    <% another_enties.each do |entry| %>
      <div class="col-sm-12  pt-3 border-bottom">
        <%= link_to room_path(entry.room) do %>
          <div>
            <%= link_to room_path(entry.room) do %>
              <%= image_tag entry.user.get_profile_image, size: '50x50' %>
              <%= entry.user.name %>
              <span class="pl-5"><%= Message.find_by(id: entry.room.message_ids.last)&.body %></span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
    <% else %>
      <p class="font-weight-bold pt-3">メッセージはありません。</p>
    <% end %>
  </div>
</div>