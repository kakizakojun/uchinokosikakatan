
<%= form_with model: post do |f| %>
<div class="form-group row">
  <div class="col-sm-4">
    <%= f.label :画像, class: 'font-weight-bold' %>
  </div>
  <div class="col-sm-8">
    <%= f.file_field :medias, multiple: true %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-4">
    <%= f.label :説明, class: 'font-weight-bold' %>
  </div>
  <div class="col-sm-8">
    <%= f.text_area :caption, rows: "5", class: 'form-control' %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-10 text-center">
    <%= f.submit submit, class: 'btn btn-success' %>
  </div>
</div>
<% end %>
