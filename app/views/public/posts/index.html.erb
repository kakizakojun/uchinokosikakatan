<div class="container">
  <div class="row py-5">
    <% @posts.each do |post| %>
      <div class="card-group pl-3 pb-3">
        <div class="card">
          <div class="card-img">
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.medias[0], size: '230x150' %>
            <% end %>
          </div>
          <div class="card-body">
            <%= link_to user_path(post.user_id) do %>
              <%= image_tag post.user.get_profile_image, size: '20x20' %>
              <%= post.user.name %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>




