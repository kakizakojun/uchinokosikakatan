<h2>ユーザー編集</h2>

<%= form_with model: @user do |f| %>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <%= f.text_field :name, autofocus: true, placeholder: "名前" %>
  <%= f.text_field :profile, placeholder: "プロフィール" %>
  <%= f.radio_button :is_active, true, {:checked => true} %>公開
  <%= f.radio_button :is_active, false %>非公開
  <%= f.submit "変更を保存" %>
<% end %>