<div class="container">
  <div class="row py-5">
    <h3>ユーザー編集画面</h3>
  </div>
    <%= form_with model: @user do |f| %>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label :profile_image, class: 'col-form-label' %>
        </div>
        <div class="col-sm-8">
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label :name, class: 'col-form-label' %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, autofocus: true, placeholder: "名前", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label :profile, class: 'col-form-label' %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :profile, rows: "5", placeholder: "プロフィール", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label :ステータス, class: 'col-form-label' %>
        </div>
        <div class="col-sm-8">
          <%= f.radio_button :is_active, true, {:checked => true} %>公開
          <%= f.radio_button :is_active, false %>非公開
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12 text-center">
          <%= f.submit "変更を保存", class: 'btn btn-primary' %>
        </div>
      </div>
      <% end %>
</div>








