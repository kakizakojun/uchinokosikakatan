
<div class="container">
  <p class="pt-2"></p>
  <div class="row py-5">
    <div class="col-sm-3">
      <%= render "public/users/info", user: @user, page_name: "show" %>
    </div>
    <div class="col-sm-9">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active link-text" id="post-tab" data-toggle= "tab" href="#post" role="tab" aria-controls="post" aria-selected="true"><%= @user.name %>さんの投稿</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link-text" id="follower-tab" data-toggle= "tab" href="#follower" role="tab" aria-controls="follower" aria-selected="true">フォロー(<%= @user.followings.count %>)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link-text" id="followed-tab" data-toggle= "tab" href="#followed" role="tab" aria-controls="followed" aria-selected="true">フォロワー(<%= @user.followers.count %>)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link-text" id="favorite-tab" data-toggle= "tab" href="#favorite" role="tab" aria-controls="favorite" aria-selected="true">いいねした投稿</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="post" role="tabpanel" aria-labellerdby="post-tab">
          <%= render "public/posts/index", posts: @user.posts %>
        </div>
        <div class="tab-pane fade show" id="follower" role="tabpanel" aria-labellerdby="follower-tab">
          <%= render "public/relationships/followers", users: @user.followings %>
        </div>
        <div class="tab-pane fade show" id="followed" role="tabpanel" aria-labellerdby="followed-tab">
          <%= render "public/relationships/followings", users: @user.followers %>
        </div>
        <div class="tab-pane fade show" id="favorite" role="tabpanel" aria-labellerdby="favorite-tab">
          <%= render "public/posts/favorite", collection: @favorites_posts, post: @post %>
        </div>
      </div>
    </div>
  </div>
</div>


