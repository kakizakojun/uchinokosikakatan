<h2>public/user/show</h2>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>user info</h2>
      <%= render "public/users/info", user: @user, page_name: "show" %>
    </div>
    <div class="col-md-8">
      <% @posts.each do |post| %>
        <% post.medias.each do |media| %>
          <%= link_to post_path(post.id) do %>
          <%= image_tag media, size: '140x100' %>
          <% end %>
        <% end %>
          <% caption_and_tags_in_array(post.caption).each do |word| %>
            <%= word %>
          <% end %>
      <% end %>
    </div>
  </div>
</div>