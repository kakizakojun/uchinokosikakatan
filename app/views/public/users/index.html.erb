<div class="container">
    <p class="font-weight-bold text-success pt-2"><%= flash[:notice] %></p>
  <div class="row py-5">
    <div class="col-md-3">
      <%= render "public/users/info", user: current_user %>
    </div>
    <div class="col-md-9">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active link-text" id="tl-tab" data-toggle= "tab" href="#tl" role="tab" aria-controls="tl" aria-selected="true">タイムライン</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link-text" id="post-tab" data-toggle= "tab" href="#post" role="tab" aria-controls="post" aria-selected="true">自分の投稿</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link-text" id="follower-tab" data-toggle= "tab" href="#follower" role="tab" aria-controls="follower" aria-selected="true">フォロー(<%= @user.followings.count %>)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link-text" id="followed-tab" data-toggle= "tab" href="#followed" role="tab" aria-controls="followed" aria-selected="true">フォロワー(<%= @user.followers.count %>)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link-text" id="favorite-tab" data-toggle= "tab" href="#favorite" role="tab" aria-controls="favorite" aria-selected="true">いいねした投稿</a>
        </li>
        <li>
          <a class="nav-link link-text" id="messages-tab" data-toggle= "tab" href="#messages" role="tab" aria-controls="messages" aria-selected="true">メッセージ</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link-text" id="notification-tab" data-toggle= "tab" href="#notification" role="tab" aria-controls="notification" aria-selected="true">通知</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="tl" role="tabpanel" aria-labellerdby="tl-tab">
          <%= render "public/posts/index", posts: @posts %>
        </div>
        <div class="tab-pane fade show" id="post" role="tabpanel" aria-labellerdby="post-tab">
          <%= render "public/posts/index", posts: @user.posts %>
        </div>
        <div class="tab-pane fade show" id="follower" role="tabpanel" aria-labellerdby="follower-tab">
          <%= render "public/relationships/followers", users: @user.followings %>
        </div>
        <div class="tab-pane fade show" id="followed" role="tabpanel" aria-labellerdby="followed-tab">
          <%= render "public/relationships/followings", users: @user.followers %>
        </div>
        <div class="tab-pane fade show" id="favorite" role="tabpanel" aria-labellerdby="favorite-tab">
          <%= render "public/posts/favorite", collection: @favorites_posts, post: @post %>
        </div>
        <div class="tab-pane fade show" id="messages" role="tabpanel" aria-labellerdby="messages-tab">
          <%= render "public/rooms/index", another_enties: @another_enties %>
        </div>
        <div class="tab-pane fade show" id="notification" role="tabpanel" aria-labellerdby="notification-tab">
          <%= render "public/notifications/index", notifications: @notifications %>
        </div>
      </div>
    </div>
  </div>
</div>